!you can define input parameters here
!   NOTE: SSE_input_controls in evolve.in are read only when METISSE is called directly though its main unit.
!   otherwise, values provided by the overlying code are used.

&SSE_input_controls

initial_Z = 0.02

max_age = 1.2d4   !max age in Myrs

read_mass_from_file = .false.
input_mass_file = ''

number_of_tracks = 10
min_mass = 1.0
max_mass = 50.0

pts_1 = 0.02
pts_2 = 0.01
pts_3 = 0.005

BHNS_mass_scheme = 'Belczynski2008'

/

&METISSE_input_controls


    metallicity_file_list = 'input/Z0p01_POLS.in',
				'input/Z0p02_POLS.in'

!Z_accuracy_limit = 5d-1

verbose = .true.
write_track_to_file = .false.        !SSE like output file


/


