!defaults control for METISSE
!do NOT make any changes to this file
!use evolve_metisse.in for input

!   NOTE: SSE_input_controls in evolve_metisse.in are read only when METISSE is called directly though its main unit/ standalone mode
!   otherwise, values provided by the overlying code are used.


&SSE_input_controls

  ! EVOLUTION CONTROLS
   
    read_mass_from_file = .false.      !for reading input masses for new tracks

    input_mass_file = ''

    number_of_tracks = 1

    max_mass = 1d5

    min_mass = 1.0
    
    initial_Z = -1.0

    max_age = 1d4   !max age in Myrs

  ! REMNANT CONTROLS


    WD_mass_scheme = 'Modified_mestel'

    !Options - "Mestel","Modified_mestel"

    Use_Initial_final_mass_relation = .false.       !for White Dwarfs


    BHNS_mass_scheme = 'Belczynski2008'

    !Options - "original_SSE", "Belczynski2002", "Belczynski2008","Eldridge_Tout2004"


    Max_NS_mass = 3.0
    !maximum NS mass (suggested 1.8 for BHNS_mass_scheme="original_SSE", 3.0 otherwise).

    
  ! TIMESCALE CONTROLS

    pts_1 = 0.05
    pts_2 = 0.01
    pts_3 = 0.02

    allow_electron_capture = .true.       !allow electron capture supernovae

/

&METISSE_input_controls

    METISSE_DIR = ''

    !INPUT CONTROLS

    !details about the set of input models for a given metallicity
    !and other information about reading them


    metallicity_file = ''

    read_files_from_Z = .false.

    !list for getting folder names given Z, used only if read_files_from_Z is true

    Z_folder_list = ''

    ! INTERPOLATION CONTROLS

    
    !search within this fraction of mass/lookup_index for fixing incomplete track
    lookup_index = 1.0

    !skip mass interpolation if there is already a track within this difference
    accuracy_limit = 1d-4

    !   OTHER REMNANT CONTROLS
    
    construct_wd_track = .true.

    
    !OUTPUT CONTROLS
    verbose = .false.
    write_track_to_file = .true.        !SSE like output file
    write_eep_file = .false.		!MIST like output file for eep tracks
    !OUTPUT_DIR = ''

/




